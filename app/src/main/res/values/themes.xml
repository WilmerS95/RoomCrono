<resources>

    <!-- Base Application Theme -->
    <style name="Theme.RoomCrono" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary color for your application -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!-- Custom RadioButton Style -->
    <style name="CustomRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:textColor">#000000</item> <!-- Black text color -->
    </style>

    <!-- AppTheme style for XML components -->
    <style name="AppTheme" parent="Theme.RoomCrono">
        <item name="radioButtonStyle">@style/CustomRadioButton</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.RoomCrono">
        <!-- Customize your toolbar theme here -->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:titleTextColor">@android:color/white</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
</resources>